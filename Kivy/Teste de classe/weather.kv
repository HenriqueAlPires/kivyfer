#: import main main
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter


WeatherRoot:

<WeatherRoot>:
    AddLocationForm

<Forecast>:
    location: ['Sao Paulo', 'BR']
    orientation: "vertical"
    Label:
        text: "{} ({})".format(root.location[0], root.location[1])
        font_size: 40
    Label:
        text: "Clima: {}".format(root.fconditions)
    Label:
        text: "Temperatura: {}".format(root.ftemp) + " \u00baC"
    Label:
        text: "Minima: {}".format(root.ftempmin) + " \u00baC"
    Label:
        text: "Maxima: {}".format(root.ftempmax) + " \u00baC"



    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Pesquisar Clima"
            on_press: app.root.show_add_location_form()
        Button:
            text: "Previsao do Tempo"

<LocationButton>:
    text: "{} ({})".format(self.location[0], self.location[1])
    height: "40dp"
    size_hint_y: None
    on_press: app.root.show_current_weather(self.location)
    bcolor: 1,1,1,1
    canvas.before:
        Color:
            rgba: self.bcolor
        Rectangle:
            pos: self.pos
            size: self.size

<AddLocationForm>:
    orientation: "vertical"
    search_input: search_box
    search_results: search_results_list

    BoxLayout:
        height: "40dp"
        size_hint_y: None

        TextInput:
            size_hint_x: 50
            id: search_box
            multiline: False
            focus: True
            on_text_validate: root.search_location()

        Button:
            text: "Pesquisar"
            size_hint_x: 25
            on_press: root.search_location()


        Button:
            text: "Localizacao Atual"
            size_hint_x: 25


    ListView:
        id: search_results_list
        adapter: ListAdapter(data=[], cls = main.LocationButton, args_converter = root.args_converter)
        item_strings: []
    Button:
        text: "Cancelar"
        size_hint_y: None
        height: "40dp"
        on_press: app.root.show_current_weather(None)
